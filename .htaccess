<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # NÃ£o reescreve arquivos/pastas que existam de verdade
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Todo o resto vai pro index.html (React Router / SPA)
  RewriteRule ^ index.html [L]
</IfModule>
